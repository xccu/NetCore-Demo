@page "/render-mode-3"
@rendermode RenderMode.InteractiveWebAssembly
@using Services;
@inject FooService FooService

<h3>WebAssembly Render Mode</h3>
<p>
    <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor/components/render-modes?view=aspnetcore-8.0#webassembly-render-mode">MS Document</a>
</p>
<p>@FooService.GetInfo()</p>
<button @onclick="UpdateMessage">Click me</button> @message

@code {
    private string message = "Not clicked yet.";

    protected override void OnInitialized()
    {
        Console.WriteLine($"WebAssemblyRender OnInitialized: {FooService.GetInfo()}");
    }

    private void UpdateMessage()
    {
        Console.WriteLine("WebAssemblyRender UpdateMessage clicked");
        message = "Somebody clicked me!";
    }
}