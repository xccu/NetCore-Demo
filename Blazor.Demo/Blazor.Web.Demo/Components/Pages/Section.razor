@page "/section"
@rendermode RenderMode.InteractiveServer
<h3>Section example</h3>

<SectionOutlet SectionName="child-content-a" />
<SectionOutlet SectionName="child-content-p" />
<SectionOutlet SectionName="child-content-li1" />
<SectionOutlet SectionName="child-content-li2" />

<Child Title="Panel Title from Parent" OnClickCallback="@ShowMessage">    
    Content of the child component is supplied by the parent component.
</Child>

<p>@message</p>

@code {
    private string? message;

    private void ShowMessage(MouseEventArgs e)
    {
        message = $"Blaze a new trail with Blazor! ({e.ScreenX}:{e.ScreenY})";
    }
}