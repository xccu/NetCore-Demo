@page "/render-mode-static"
@using Services;
@inject FooService FooService
<h3>Static Render Mode</h3>
<p>
    <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor/components/render-modes?view=aspnetcore-8.0#static-render-mode">static-render-mode</a>
</p>
<p>@FooService.GetInfo()</p>
<button class="btn btn-primary" @onclick="UpdateMessage">Click me</button> @message

@code {
    private string message = "Not clicked yet.";

        protected override void OnInitialized()
    {
        Console.WriteLine($"[{DateTime.Now}] StaticRender OnInitialized: {FooService.GetInfo()}");
    }

    private void UpdateMessage()
    {
        Console.WriteLine($"[{DateTime.Now}] StaticRender UpdateMessage clicked");
        message = "Somebody clicked me!";
    }
}