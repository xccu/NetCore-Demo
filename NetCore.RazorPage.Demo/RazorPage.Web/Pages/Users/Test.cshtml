@page
@model RazorPage.Web.Pages.Users.TestModel
@{
    ViewData["Title"] = "Test";
}

<p>
    <a asp-page="Index">Index</a>
</p>

<p>@Model.Message</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Race)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].RegisterDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Race)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegisterDate)
                </td>
                <td>
                    <form asp-page-handler="Detail" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button>Detail</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Race)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Race)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.RegisterDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.RegisterDate)
        </dd>
    </dl>
</div>