@namespace AntDesign.Docs
@using Ant_Form_Demo.Data;
@inherits AntInputComponentBase<Price>

<span>
    <Input @bind-Value="@Value.Number" style="width: 100px" />

    <RadioGroup @bind-Value="@Value.Currency" style="width: 280px; margin: 0 8px">
        <Radio RadioButton Value=@("rmb")>RMB</Radio>
        <Radio RadioButton Value=@("dollar")>Dollar</Radio>
    </RadioGroup>
</span>